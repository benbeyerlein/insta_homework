<div class="page-header">
  <h1>Favorite Photos of User <%= current_user.email %></h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Caption</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @user.favorite_photos.each do |favs| %>
      <tr>
        <td><img src="<%= favs.image_url %>" width=300></td>
        <td><%= favs.caption %></td>
      </tr>
    <% end %>
  </tbody>
</table>
